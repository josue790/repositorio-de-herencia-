class Animal:
    def __init__(self, nombre, edad):
        self.nombre = nombre
        self.edad = edad
    def emitir_sonido(self):
        print("Sonido")
    def imprimir_detalles(self):
        print("Nombre:", self.nombre, "Edad:", self.edad)
        self.emitir_sonido()
class Perro(Animal):
    def emitir_sonido(self):
        print("Guau guau!")
class Gato(Animal):
    def emitir_sonido(self):
        print("Miau miau!")
