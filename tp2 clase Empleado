class Empleado:
    def __init__(self, nombre, salario, cargo):
        self.nombre = nombre
        self.salario = salario
        self.cargo = cargo
    def mostrar(self):
        print(self.nombre, "-", self.cargo, "- Salario:", self.salario)
class Gerente(Empleado):
    def calcular_aumento(self):
        self.salario = self.salario + (self.salario * 0.10)
        print("Aumento gerente:", self.salario)
class EmpleadoTemporal(Empleado):
    def calcular_aumento(self):
        self.salario = self.salario + 100
        print("Aumento empleado temporal:", self.salario)
