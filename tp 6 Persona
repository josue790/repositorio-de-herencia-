class Persona:
    def __init__(self, nombre, edad):
        self.nombre = nombre
        self.edad = edad
    def mostrar_info(self):
        print("Nombre:", self.nombre)
        print("Edad:", self.edad)
class Estudiante(Persona):
    def mostrar_info(self):
        super().mostrar_info()
        print(self.nombre, "es un estudiante.")
class Profesor(Persona):
    def mostrar_info(self):
        super().mostrar_info()
        print(self.nombre, "es un profesor.")
