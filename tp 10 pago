class Pago:
    def __init__(self, monto, fecha):
        self.monto = monto
        self.fecha = fecha
    def mostrar(self):
        print("Monto:", self.monto, "Fecha:", self.fecha)
class PagoTarjeta(Pago):
    def procesar(self):
        print("Pago con tarjeta realizado.")
class PagoMercadoPago(Pago):
    def procesar(self):
        print("Pago con Mercado Pago realizado.")
